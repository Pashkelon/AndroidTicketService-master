<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.biletiki2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_label"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".UIclasses.SuccessActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".UIclasses.PayActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".UIclasses.ShoppingCart"
            android:screenOrientation="portrait"/>
        <activity android:name=".UIclasses.EventInfo"
            android:screenOrientation="portrait"/>
        <activity android:name=".UIclasses.TermsAndConditions" />
        <activity
            android:name=".halls.grosse_saal.areas.SecondArea"
            android:screenOrientation="landscape" />
        <activity
            android:name=".halls.grosse_saal.areas.ThirdArea"
            android:screenOrientation="portrait" />
        <activity android:name=".UIclasses.LogoutActivity" />
        <activity android:name=".UIclasses.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UIclasses.RegistrationInput"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".halls.HallActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".halls.grosse_saal.GrosseSaal"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".halls.kleiner_saal.KleinerSaal"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".halls.grosse_saal.areas.FirstArea"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UIclasses.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>